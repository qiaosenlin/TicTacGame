<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player_1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/score1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/player1"
        app:layout_constraintLeft_toLeftOf="@id/player1"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player_2"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/score2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/player2"
        app:layout_constraintRight_toRightOf="@id/player2"
        android:layout_marginRight="40dp"
        />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/score1"
    />

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn_0"
        android:textSize="60sp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/status"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn_1"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@+id/btn_0"
        app:layout_constraintLeft_toRightOf="@id/btn_0"/>

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn_2"
        android:textSize="60sp"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@+id/btn_0"
        app:layout_constraintLeft_toRightOf="@id/btn_1"/>

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn_3"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/btn_0"
        app:layout_constraintLeft_toLeftOf="@id/btn_0" />

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn_4"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@+id/btn_3"
        app:layout_constraintLeft_toRightOf="@id/btn_3"/>

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn_5"
        android:textSize="60sp"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@+id/btn_4"
        app:layout_constraintLeft_toRightOf="@id/btn_4"/>

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn_6"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/btn_4"
        app:layout_constraintLeft_toLeftOf="@id/btn_0" />

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn_7"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/btn_5"
        app:layout_constraintLeft_toRightOf="@id/btn_6"/>

    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn_8"
        android:textSize="60sp"

        android:textStyle="bold"
        android:backgroundTint="#413F43"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/btn_5"
        app:layout_constraintLeft_toRightOf="@id/btn_7"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/reset"
        android:text="reset GAME"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/btn_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="#E14704"/>





</androidx.constraintlayout.widget.ConstraintLayout>